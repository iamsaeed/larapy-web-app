#!/usr/bin/env python3
"""
MyApp Larapy CLI

Application-specific CLI entry point for MyApp commands.
Similar to Laravel's artisan file in each project.
"""

import sys
import os
from bootstrap.console import create_console_application, get_console_kernel
from larapy.console.application import ConsoleApplication


def main():
    """Main entry point for MyApp Larapy CLI"""
    try:
        # Bootstrap application
        app = create_console_application()

        # Get console kernel
        kernel = get_console_kernel(app)

        # Create console application with kernel
        console_app = ConsoleApplication(app, kernel)

        # Run console application
        sys.exit(console_app.run())

    except Exception as e:
        print(f"Error: {str(e)}", file=sys.stderr)
        sys.exit(1)


if __name__ == '__main__':
    main()